---
import '../styles/globals.css';
import { Navigation } from '@/components/navigation';
import { Footer } from '@/components/footer';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const pathname = Astro.url.pathname;
const organizationLd = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'UTOPICA',
  description: 'Consultoría en libertad comercial, autonomía humana y crecimiento estratégico para empresas en CDMX.',
  url: 'https://utopica.net/',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Ciudad de México',
    addressCountry: 'MX'
  },
  areaServed: 'CDMX',
  keywords: 'libertad comercial CDMX, consultoría comercial CDMX, crecimiento empresarial CDMX, desempeño comercial humano, autonomía estratégica, inteligencia de mercado'
};

const organizationLdEn = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'UTOPICA',
  description: 'Commercial freedom consulting, human autonomy, and strategic growth for companies in Mexico City.',
  url: 'https://utopica.net/en',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Mexico City',
    addressCountry: 'MX'
  },
  areaServed: 'Mexico City',
  keywords: 'commercial freedom Mexico City, commercial consulting Mexico City, business growth CDMX, human commercial performance, strategic autonomy, market intelligence'
};

const isEnglish = pathname.startsWith('/en');
const ldJson = isEnglish ? organizationLdEn : organizationLd;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Security Headers -->
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <script type="application/ld+json">
      {JSON.stringify(ldJson)}
    </script>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:p-4 focus:bg-primary focus:text-primary-foreground">
      Saltar al contenido principal
    </a>
    
    <!-- Navigation React Component -->
    <Navigation client:load pathname={pathname} />
    
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>
    
    <!-- Footer React Component -->
    <Footer client:load pathname={pathname} />
  </body>
</html>
