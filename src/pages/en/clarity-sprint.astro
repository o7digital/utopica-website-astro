  <SprintFailedSolutions lang="en" client:visible />
  <SprintSuccessCriteria lang="en" client:visible />
  <SprintComparisonStatic lang="en" client:visible />
  <SprintProcess lang="en" client:visible />
  <SprintBonuses lang="en" client:visible />
  <SprintOffer lang="en" client:visible />
  <SprintCTA lang="en" client:visible />
  <SprintFAQ lang="en" client:visible />
