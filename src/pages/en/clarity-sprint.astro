const title = 'Clarity Sprint | 9 Tools in 4 Weeks - UTOPICA';
const description = 'Get a clear message and 9 proven tools so your team can sell without you. 4-week intensive with a results guarantee for B2B founders.';

const breadcrumbItems = [
  { name: 'Home', item: 'https://utopica.net/en' },
  { name: 'Clarity Sprint', item: 'https://utopica.net/en/clarity-sprint' },
];
---

<Layout title={title} description={description}>
  <BreadcrumbListSchema items={breadcrumbItems} client:only="react" />
